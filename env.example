# Example environment configuration for the MBE stack
MYSQL_ROOT_PASSWORD=change-me
MYSQL_DATABASE=example_crm
MYSQL_USER=example_crm
MYSQL_PASSWORD=change-me

# Dev image/build settings
APP_IMAGE_NAME=mbe:dev
PUID=1000
PGID=1000

# Path to app sources mounted into apache container
APP_CODE_PATH=./html/mbelab.com

# Path to infra-managed CRM runtime config files
CRM_CONFIG_PATH=./configs/crm

# CRM runtime settings (consumed by configs/crm/config.inc.php)
MYSQL_CONTAINER=mysql
CRM_DB_PORT=3306
CRM_SITE_URL=http://localhost:8081/crm/
CRM_PORTAL_URL=http://localhost:8081/customerportal
CRM_ROOT_DIRECTORY=/var/www/html/mbelab.com/crm/
CRM_HELPDESK_EMAIL=support@example.local
CRM_HELPDESK_NAME=MBE CRM Team
CRM_CSRF_SECRET=change-this-csrf-secret
CRM_APPLICATION_UNIQUE_KEY=change-this-application-key
